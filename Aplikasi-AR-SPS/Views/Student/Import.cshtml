@model ClassLibrary.Service.StudentModule.Models.StudentImportFormVM

@{
    ViewBag.Title = "Impor - Data Siswa";
}

<h2>Impor</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Data Siswa | @Html.ActionLink("Unduh Templet", "DownloadImportTemplate")</h4>
        <hr />

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.FileUpload, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FileUpload, new { @type = "file" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Impor" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Kembali ke daftar", "Index")
</div>
